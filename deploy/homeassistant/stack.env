## #################################################################################################################
## Create Archive with Proxy Configs
##  ( cd ~/_dotfiles/deploy ; DIST=alpine:3.17.9 docker-compose -f pihole/docker-compose.yml build )
##  ( cd ~/_dotfiles/deploy ; DIST=alpine:3.17.9 docker-compose -f pihole/docker-compose.yml up --build -d pihole )
## #################################################################################################################
MNT=./
DIST=alpine:3.17.9
DIST_TAG=alpine-edge
RUNIT_SV_MAIN=runit-sv-restart
RUNIT_SV_RESTART=tor
RUNIT_TIMER_CONFD=300
RUNIT_TIMER_PROXY=3600
RUNIT_TIMER_RESTART=3600
EXPOSE=8123

## ----------------------------------------------------------------------
## HOMEASSISTANT
## https://community.home-assistant.io/t/installing-home-assistant-on-wd-mycloudex2ultra/530270
## ----------------------------------------------------------------------
APP_NAME=homeassistant
DISABLE_JEMALLOC=true
TZ="America/New_York"
DNSMASQ_LISTENING="all"
DISABLE_JEMALLOC=true
#ENTRYPOINT=${ENTRYPOINT-/init}
#DEBUG=1
